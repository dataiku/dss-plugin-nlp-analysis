// This file is the descriptor for the Custom code recipe ontology-tagging
{
    // Meta data for display purposes
    "meta": {
       
        "label": "Ontology tagging",
        "description": "assigning given tags to documents",
        "icon": "icon-font-awesome-3.2.1"
    },

    "kind": "PYTHON",
   

    "inputRoles": [
        {
            "name": "documents_to_tag",
            "label": "documents to tag",
            "description": "the documents you wish to tag",
            "arity": "UNARY",
            "required": true,
            "acceptsDataset": true
        },
        {
            "name": "ontology_of_tags",
            "label": "ontology of tags",
            "description": "dictionary with tags,keywords and categories",
            "arity": "UNARY",
            "required": true,
            "acceptsDataset": true
        }
    
    ],

    "outputRoles": [
        {
            "name": "tagged_documents",
            "label": "tagged documents",
            "description": "documents and their assigned tags",
            "arity": "UNARY",
            "required": true,
            "acceptsDataset": true
        }
  
    ],
    
    "selectableFromDataset": "documents_to_tag",
    "selectableFromDataset":"ontology_of_tags",


    "params": [
        
         {
            "name": "separator_input",
            "label": "Document dataset",
            "type": "SEPARATOR"
        },
        
        
        {
            "name": "text_column",
            "label": "text column",
            "type": "COLUMN",
            "description": "text column containing the documents",
            "mandatory": true,
            "columnRole": "documents_to_tag",
            "allowedColumnTypes": [
                "string"
            ]
        },
        {                                           #TODO add a comment about the supported languages? 
            "name": "language_column",
            "label":'language',
            "type": "COLUMN",
            "mandatory":true,
            "columnRole": "documents_to_tag",
            "allowedColumnTypes": [
                "string"
            ]
            
        },
        
        {
            "name": "tags_dataset",
            "label": "Tags dataset",
            "type": "SEPARATOR"
        },
        
        {
            "name": "tag_column",
            "label": "tag column",
            "type":"COLUMN",
            "mandatory":true,
            "columnRole":"ontology_of_tags",
            "allowedColumnTypes": [
                "string"
            ]
        },
        
       
         
        {
            "name":"keyword_column",
            "label":"keyword column",
            "type":"COLUMN",
            "mandatory":false,
            "columnRole":"ontology_of_tags",
            "allowedColumnTypes": [
                "string"
            ]
            
        },
        
        
        {
            "name":'category_column',
            "label":"category column",
            "type": "COLUMN",
            "mandatory":false,
            "columnRole":"ontology_of_tags",
            "allowedColumnTypes": [
                "string"
            ],
            "defaultValue":""
            
        },
        
        {
            "name": "Matching Parameters",
            "label": "Matching Parameters",
            "type": "SEPARATOR"
        },
        
        {
            "name":'case_sensitivity',
            "label":"case-sensitive output",
            "description": "for keywords compared case sensitive by exact match",
            "type": "BOOLEAN",
            "defaultValue":true
            
        },
        {
            "name":"lemmatization",
            "label":"lemmatization",
            "description": "for matching by lemmatized forms",
            "type": "BOOLEAN",
            "defaultValue":false
            
        },
        {
            "name":'unicode_normalization',
            "label":"unicode normalization",
            "description": "for matching regardless character encoding",
            "type": "BOOLEAN",
            "defaultValue":false
            
        },
        
        
          {
            "name": "Output Formats",
            "label": "Output Formats",
            "type": "SEPARATOR"
        },
        

        {
            "name": "possible_outputs_with_cat",
            "label":"possible outputs",
            "type": "SELECT",
            "visibilityCondition":"model.category_column.length>0",
            
            "selectChoices": [
                {
                    "value": "one row per doc",
                    "label": "one row per doc"
                },
                
                {
                    "value": "one row per tag",
                    "label": "one row per tag"
                },
                
                {
                    "value":"JSON output",
                    "label":"JSON output"  
                }
            ],
            "defaultValue":"one row per doc"
        },
         
        {
            "name": "possible_outputs",
            "label":"possible outputs",
            "type": "SELECT",
            "visibilityCondition": "!model.category_column.length>0",
             
            "selectChoices": [
                {
                    "value": "one row per doc",
                    "label": "one row per doc"
                },
                
                {
                    "value": "one row per tag",
                    "label": "one row per tag"
                }
            ],
            "defaultValue":"one row per doc"
        }
     
    ]

}
