            "type": "BOOLEAN",
            "defaultValue": false
        },
        {
            "name": "lemmatization",
            "label": "Lemmatize",
            "description": "Simplify words to their “lemma” form e.g. going → go, mice → mouse",
            "type": "BOOLEAN",
            "defaultValue": false
        },
        {
            "name": "separator_output_parameters",
            "label": "Output parameters",
            "type": "SEPARATOR"
        },
        {
            "name": "output_format",
            "label": "Output format",
            "type": "SELECT",
            "selectChoices": [
                {
                    "value": "one_row_per_tag",
                    "label": "1 row / tag"
                },
                {
                    "value": "one_row_per_doc",
